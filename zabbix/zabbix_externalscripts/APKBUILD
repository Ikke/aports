pkgname=zabbix_externalscripts
pkgver=0.1.1
pkgrel=0
pkgdesc="External scripts for Zabbix"
url="https://github.com/ikke/zabbix_externalscripts"
arch="noarch"
license="custom"
depends="python3 rsync"
source="zabbix_externalscripts-$pkgver.tar.gz::https://github.com/Ikke/zabbix_externalscripts/archive/v$pkgver.tar.gz"
builddir="$srcdir/$pkgname-$pkgver"
options="!check"

package() {
	cd "$builddir"

	DESTDIR="$pkgdir" ./install.sh
}

